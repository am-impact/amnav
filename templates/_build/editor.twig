{% import "_includes/forms" as forms %}

{{ forms.textField({
    id: 'name',
    name: 'name',
    label: "Name"|t,
    value: node.name,
    instructions: 'Name of this node in the navigation.'|t
}) }}

{% if not node.entryId|length %}
	{{ forms.textField({
	    id: 'url',
	    name: 'url',
	    label: "URL"|t,
	    value: node.url,
	    instructions: 'The URL of this node.'|t
	}) }}
{% else %}
    {% set entry = craft.entries.id(node.entryId).locale(node.locale).first() %}

    {% if entry %}
        <div class="field">
            <div class="heading">
                <label>{{ 'Linked to'|t }}</label>
                <div class="instructions">
                    <p>{{ entry.title }}<br>{{ 'URI'|t }}: {{ entry.uri }}<br><a href="{{ entry.cpEditUrl }}" target="_blank">{{ 'Edit'|t }}</a></p>
                </div>
            </div>
        </div>
    {% endif %}
{% endif %}

{{ forms.lightswitchField({
    id:           'enabled',
    name:         'enabled',
    label:        'Enabled'|t,
    on:           node.enabled,
    instructions: 'Display in navigation.'|t
}) }}

{{ forms.lightswitchField({
    id:           'blank',
    name:         'blank',
    label:        'New window'|t,
    on:           node.blank,
    instructions: 'Whether to open this node in a new window.'|t
}) }}